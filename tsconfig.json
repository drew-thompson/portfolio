{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@portfolio/api-interface": ["libs/api-interface/src/index.ts"],
      "@portfolio/core/config": ["libs/core/config/src/index.ts"],
      "@portfolio/common/material": ["libs/common/material/src/index.ts"],
      "@portfolio/common/ui/buttons": ["libs/common/ui/buttons/src/index.ts"],
      "@portfolio/common/ui/header": ["libs/common/ui/header/src/index.ts"],
      "@portfolio/common/ui/footer": ["libs/common/ui/footer/src/index.ts"],
      "@portfolio/shared": ["libs/shared/src/index.ts"],
      "@portfolio/common/animations": ["libs/common/animations/src/index.ts"],
      "@portfolio/common/styles": ["libs/common/styles/src/index.ts"],
      "@portfolio/data/models": ["libs/data/models/src/index.ts"],
      "@portfolio/core/utils": ["libs/core/utils/src/index.ts"],
      "@portfolio/common/directives": ["libs/common/directives/src/index.ts"],
      "@portfolio/data/enums": ["libs/data/enums/src/index.ts"],
      "@portfolio/home/feature-shell": ["libs/home/feature-shell/src/index.ts"],
      "@portfolio/common/ui/sidenav": ["libs/common/ui/sidenav/src/index.ts"],
      "@portfolio/common/services": ["libs/common/services/src/index.ts"],
      "@portfolio/home/ui": ["libs/home/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
